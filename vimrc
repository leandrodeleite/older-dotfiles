set nocompatible   " vim over vi

set nobackup       " no swap 
set noswapfile     " no backup

set tabstop=2      " tabs, spaces
set shiftwidth=2   "  
set expandtab      " spaces over tabs
set softtabstop=0 

set ruler          " cursor position 
set number         " line number

set title

set mouse=a         " mouse enabled

